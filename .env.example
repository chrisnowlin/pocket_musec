# Chutes API Configuration
CHUTES_API_KEY=your_api_key_here
CHUTES_API_BASE_URL=https://api.chutes.ai/v1

# Model Configuration
DEFAULT_MODEL=Qwen/Qwen3-VL-235B-A22B-Instruct
EMBEDDING_MODEL=Qwen/Qwen3-Embedding-8B
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=2000

# Database Configuration (optional - uses default if not set)
# DATABASE_PATH=/path/to/custom/database.db
DATABASE_PATH=data/standards/standards.db

# JWT Authentication (REQUIRED for production)
# Generate a secure random key: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-secret-key-here-change-this-in-production

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
