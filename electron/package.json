{
  "name": "pocketmusec-desktop",
  "version": "1.0.0",
  "description": "PocketMusec Desktop App - macOS Electron Application",
  "main": "dist/main.js",
  "homepage": "./",
  "author": {
    "name": "PocketMusec Team",
    "email": "team@pocketmusec.com"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:electron\" \"npm run dev:backend\"",
    "dev:electron": "tsc -p tsconfig.json && electron .",
    "dev:backend": "cd .. && python run_api.py",
    "build": "npm run build:electron && npm run build:frontend && npm run build:backend",
    "build:electron": "tsc -p tsconfig.json",
    "build:frontend": "cd ../frontend && npm run build",
    "build:backend": "cd .. && pyinstaller --onefile --name=pocketmusec-backend run_api.py",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "pack": "npm run build && electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "electron-updater": "^6.1.7",
    "electron-store": "^8.1.0",
    "find-free-port": "^2.0.0",
    "wait-on": "^7.2.0",
    "axios": "^1.6.2"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "typescript": "^5.3.3",
    "concurrently": "^8.2.2",
    "@types/node": "^20.10.5"
  },
  "build": {
    "appId": "com.pocketmusec.app",
    "productName": "PocketMusec",
    "directories": {
      "output": "../dist-electron"
    },
    "files": [
      "dist/**/*",
      "../frontend/dist/**/*",
      "../backend/**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraResources": [
      {
        "from": "../backend",
        "to": "backend"
      }
    ],
    "mac": {
      "category": "public.app-category.education",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "title": "${productName} ${version}",
      "icon": "assets/volume.icns",
      "background": "assets/dmg-background.png",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "github",
      "owner": "pocketmusec",
      "repo": "pocket-musec"
    }
  }
}